.row { 
    display: table; 
    table-layout: fixed; 
    width: 100%; 
}

/* using a mixin since we can't use placeholder selectors */
@mixin col {
    display: table-cell;
    vertical-align: top;
}

.col {
    @include col;
}

.zeroPadding {
    padding: 0 !important;
}

/*
